@model RegnumStore.Models.EditUserModel
@{
    ViewBag.Title = "Изменение учетной записи";
    Layout = "~/Views/Shared/_LayoutExtended.cshtml";
    ViewBag.Robots = "nofollow, noindex";   
}
<div class="page wrapper">
        <div id="crumbs">
        <ul class="exbreadcumb">
            <li>@Html.ActionLink("Главная","Portfolio","Home")</li>
            <li>@Html.ActionLink("Личный кабинет","UserInfo","Account")</li>
            <li class="active">@Html.ActionLink("Изменение учетной записи","UserAccountChange","Account")</li>
        </ul>
    </div>
    <div class="auth-form">
        <section id="loginForm">
            <h1>Изменение учетной записи</h1>
            @using (Html.BeginForm()) {
                
                
                @Html.HiddenFor(model => model.UserID)
                @Html.HiddenFor(model => model.Login)
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="accountLeft">
                    @*<p>@Html.LabelFor(x=>x.Login):</p>*@
                    @*<p>@Html.TextBoxFor(m => m.Login, new {@placeholder = Html.DisplayNameFor(x=>x.Login)})</p>*@
                    @*<p>@Html.LabelFor(x=>x.Email):</p>*@
                    <p>@Html.TextBoxFor(m => m.Email, new {@placeholder = Html.DisplayNameFor(x=>x.Email)})</p>
                    <p>@Html.TextBoxFor(m => m.Phone, new {@placeholder = Html.DisplayNameFor(x=>x.Phone)})</p>
                </div>
                <div class="accountLeft">
                    @*<p>@Html.LabelFor(x=>x.Phone):</p>*@
                    
                    @*<p>@Html.LabelFor(x=>x.UserName):</p>*@
                    <p>@Html.TextBoxFor(m => m.UserName, new {@placeholder = Html.DisplayNameFor(x=>x.UserName)})</p>
                    <p><input type="submit" value="Изменить"/></p>
                    <p>@Html.ActionLink("Изменить пароль","ChangePassword","Account", null, new {@Style="height: 22px;" , @class = "action-btn"})</p>
                </div>
                
            }
        </section>
        
    </div>

</div>
  
  <script type="text/javascript" src="@Url.Content("~/Scripts/js/jquery.maskedinput.min.js")"></script>
<script>
    $("#Phone").mask("9 (999) 999-99-99");
</script>
  
  
  
  
