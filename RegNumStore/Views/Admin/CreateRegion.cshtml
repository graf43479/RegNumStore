@*@model Domain.Entities.Region*@

@model RegNumStore.Models.RegionViewModel


@{ AjaxOptions ajax = new AjaxOptions
   {
       UpdateTargetId = "newsDetails",
       //Url = Url.Action("ChangeQuantity"),
       Url = Url.Action("CreateRegion"),
       /*HttpMethod = "Post",*/
       InsertionMode = InsertionMode.Replace,
       HttpMethod = "POST",
       OnBegin = "gifLoaderBefore",
       OnSuccess = "gifLoaderAfter",
       OnFailure = "gifLoaderAfter",
       OnComplete = "gifLoaderAfter"

   };
}

<style>
    form {
        background-color: #FFFFFF;
        border: none;
        margin: 0;
    }
</style>

<div id="newsDetails" class="col-lg-12 col-md-12">
    <h2>Создание или редактирование регионов</h2>
    <div class="row">
        <div class="col-lg-12 col-md-12">
            @using (Ajax.BeginForm(ajax))
            {
                <p>@Html.ValidationSummary(true)</p>
                @*@Html.HiddenFor(x => x.TagID)*@
                @Html.HiddenFor(x=>x.RegionID)


                <div class="col-lg-12 col-md-12" style="padding: 0;">
                    <div class="form-group" style="padding: 0; margin-bottom: 12px">
                        <label class="col-lg-2 col-md-2 form-control-static">Номер региона </label>
                        <div class="col-lg-10 col-md-10" style="padding: 0 0 4px 0;">@Html.EditorFor(x => x.RegionNumber) @Html.ValidationMessageFor(x => x.RegionNumber)</div>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12" style="padding: 0;">
                    <div class="form-group" style="padding: 0; margin-bottom: 12px">
                        <label class="col-lg-2 col-md-2 form-control-static">Название региона</label>
                        <div class="col-lg-10 col-md-10" style="padding: 0 0 4px 0;">@Html.EditorFor(x => x.RegionName) @Html.ValidationMessageFor(x => x.RegionName)</div>
                    </div>
                </div>

                @*<div class="col-lg-12 col-md-12" style="padding: 0;">
                    <div class="form-group" style="padding: 0; margin-bottom: 12px">
                        <label class="col-lg-2 col-md-2 form-control-static">Название типа региона</label>
                        <div class="col-lg-10 col-md-10" style="padding: 0 0 4px 0;">@Html.EditorFor(x => x.RegionTypeID) @Html.ValidationMessageFor(x => x.RegionTypeID)</div>
                    </div>
                </div>*@
                
                
                <div class="col-lg-12 col-md-12" style="padding: 0;">
                    <div class="form-group" style="padding: 0; margin-bottom: 12px">
                        <label class="col-lg-2 col-md-2 form-control-static">Название типа региона</label>
                        <div class="col-lg-10 col-md-10" style="padding: 0 0 4px 0;">@Html.DropDownListFor(x => x.RegionTypeID, new SelectList(Model.RegionTypes, "RegionTypeID", "RegionTypeDesc"), "Выберите категорию")</div>
                    </div>
                </div>

                 <div class="col-lg-12 col-md-12" style="padding: 0;">
                    <div class="form-group" style="padding: 0; margin-bottom: 12px">
                        <label class="col-lg-2 col-md-2 form-control-static">Номер важности</label>
                        <div class="col-lg-10 col-md-10" style="padding: 0 0 4px 0;">@Html.EditorFor(x => x.Sequence) @Html.ValidationMessageFor(x => x.Sequence)</div>
                    </div>
                </div>



                <div class="form-group">
                    <label class="col-lg-9 col-md-9">&nbsp;</label>
                    <input class="btn btn-info col-lg-3 col-md-3" value="Готово" type="submit" style="margin: 10px 0;" />
                </div>


            }
        </div>
    </div>

    @using (Html.BeginForm("DeleteRegion", "Admin"))
    {
        @Html.HiddenFor(x => x.RegionID)
        <div class="form-group" style="margin:0;">
            <label class="col-lg-9 col-md-9">&nbsp;</label>
            <input class="btn btn-danger col-lg-3 col-md-3" value="Удалить" type="submit" style="margin: 0 0 10px 0;" />
        </div>}


    




    
    <br />
</div>





<script>

    $(document).ready(function () {
 
        $("#RegionNumber").addClass("form-control");
        $("#RegionName").addClass("form-control");
        $("#RegionTypeID").addClass("form-control");
        $("#Sequence").addClass("form-control");


    });
</script>

