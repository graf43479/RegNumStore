@model Domain.Entities.SeoAttribute

@{ AjaxOptions ajax = new AjaxOptions
   {
       UpdateTargetId = "newsDetails",
       //Url = Url.Action("ChangeQuantity"),
       Url = Url.Action("CreateSeoAttributes"),
       /*HttpMethod = "Post",*/
       InsertionMode = InsertionMode.Replace,
       HttpMethod = "POST",
       OnBegin = "gifLoaderBefore",
       OnSuccess = "gifLoaderAfter",
       OnFailure = "gifLoaderAfter",
       OnComplete = "gifLoaderAfter"

   };
}

<style>
    form {
        background-color: #FFFFFF;
        border: none;
        margin: 0;
    }
</style>

<div id="newsDetails" class="col-lg-12 col-md-12">
    <h2>Публикация атрибутов SEO</h2>
    <div class="row">
        <div class="col-lg-12 col-md-12">
            @using (Ajax.BeginForm(ajax))
            {
                <p>@Html.ValidationSummary(true)</p>
                @*@Html.HiddenFor(x => x.TagID)*@

                <div class="col-lg-12 col-md-12" style="padding: 0;">
                    <div class="form-group" style="padding: 0; margin-bottom: 12px">
                        <label class="col-lg-2 col-md-2 form-control-static">TagID</label>
                        <div class="col-lg-10 col-md-10" style="padding: 0 0 4px 0;">@Html.EditorFor(x => x.TagID) @Html.ValidationMessageFor(x => x.TagID)</div>
                    </div>
                </div>
                
                <div class="col-lg-12 col-md-12" style="padding: 0;">
                    <div class="form-group" style="padding: 0; margin-bottom: 12px">
                        <label class="col-lg-2 col-md-2 form-control-static">Tag</label>
                        <div class="col-lg-10 col-md-10" style="padding: 0 0 4px 0;">@Html.EditorFor(x => x.Tag) @Html.ValidationMessageFor(x => x.Tag)</div>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12" style="padding: 0;">
                    <div class="form-group" style="padding: 0; margin-bottom: 12px">
                        <label class="col-lg-2 col-md-2 form-control-static">Tittle</label>
                        <div class="col-lg-10 col-md-10" style="padding: 0 0 4px 0;">@Html.EditorFor(x => x.Tittle) @Html.ValidationMessageFor(x => x.Tittle)</div>
                    </div>
                </div>
                
                <div class="col-lg-12 col-md-12" style="padding: 0;">
                    <div class="form-group" style="padding: 0; margin-bottom: 12px">
                        <label class="col-lg-2 col-md-2 form-control-static">Robots</label>
                        <div class="col-lg-10 col-md-10" style="padding: 0 0 4px 0;">@Html.EditorFor(x => x.Robots) @Html.ValidationMessageFor(x => x.Robots)</div>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-lg-2 col-md-2 form-control-static">Метатеги</label>
                    <div class="col-lg-10 col-md-10" style="padding: 0 0 4px 0;">@Html.TextAreaFor(x => x.Keywords) @Html.ValidationMessageFor(x => x.Keywords)</div>
                </div>

                <div class="form-group">
                    <label class="col-lg-2 col-md-2 form-control-static">Сниппет</label>
                    <div class="col-lg-10 col-md-10" style="padding: 0 0 4px 0;">@Html.TextAreaFor(x => x.Snippet) @Html.ValidationMessageFor(x => x.Snippet)</div>
                </div>



                <div class="form-group">
                    <label class="col-lg-9 col-md-9">&nbsp;</label>
                    <input class="btn btn-info col-lg-3 col-md-3" value="Готово" type="submit" style="margin: 10px 0;" />
                </div>


            }
        </div>
    </div>

    @using (Html.BeginForm("DeleteSeoAttribute", "Admin"))
    {
        @Html.HiddenFor(x => x.TagID)
        <div class="form-group" style="margin:0;">
            <label class="col-lg-9 col-md-9">&nbsp;</label>
            <input class="btn btn-danger col-lg-3 col-md-3" value="Удалить" type="submit" style="margin: 0 0 10px 0;" />
        </div>}


    




    
    <br />
</div>





<script>

    $(document).ready(function () {
        $("#Tag").addClass("form-control");
        $("#Tittle").addClass("form-control");
        $("#Robots").addClass("form-control");
        $("#Keywords").addClass("form-control");
        $("#Snippet").addClass("form-control");
        $("#TagID").addClass("form-control");


    });
</script>

