<script>
    $(document).ready(function () {
        $("#isForSale").addClass('form-control');



        //$("#categoryId").addEventListener('focus', function () {
        //    // Список открылся
        //}, false);
        $("#isForSale").change(function () {
            $("#searcher").click();

        });
    });
</script>